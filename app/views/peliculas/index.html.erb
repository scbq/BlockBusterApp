<% content_for :title, "Películas" %>

<h1 class="display-4 text-center mb-4">Películas</h1>

<!-- Barra de búsqueda -->
<div class="d-flex justify-content-between mb-4">
  <%= form_with url: peliculas_path, method: :get, class: 'input-group' do %>
    <%= text_field_tag :query, params[:query], placeholder: "Buscar películas...", class: 'form-control', aria: { label: 'Buscar películas' } %>
    <button class="btn btn-primary" type="submit">
      <i class="fas fa-search"></i> Buscar
    </button>
  <% end %>

  <!-- Botón para volver al home -->
  <%= link_to 'Home', root_path, class: 'btn btn-secondary ms-3' %>
</div>

<div id="peliculas" class="row">
  <% @peliculas.each do |pelicula| %>
    <div class="col-md-4">
      <%= render pelicula %>
    </div>
  <% end %>
</div>
