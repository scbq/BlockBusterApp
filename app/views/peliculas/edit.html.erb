<% content_for :title, "Editar Película" %>

<h1 class="text-center my-4">Editar Película</h1>

<!-- Renderizamos el formulario de la película -->
<%= render "form", pelicula: @pelicula %>

<!-- Botones para ver la película o volver a la lista -->
<div class="text-center mt-4">
  <!-- Botón para ver la película -->
  <%= link_to pelicula_path(@pelicula), class: 'btn btn-info me-2 d-inline-flex align-items-center' do %>
    <i class="fas fa-eye me-2"></i> Ver Película
  <% end %>

  <!-- Botón para volver a la lista de películas -->
  <%= link_to peliculas_path, class: 'btn btn-secondary d-inline-flex align-items-center' do %>
    <i class="fas fa-arrow-left me-2"></i> Volver a Películas
  <% end %>
</div>
