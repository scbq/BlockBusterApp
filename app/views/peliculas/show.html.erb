<!-- Notificación en verde si existe -->
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<!-- Renderizar los detalles de la película -->
<%= render @pelicula %>

<!-- Botón para volver a la lista de películas fuera de la tarjeta -->
<div class="mt-3">
  <%= link_to peliculas_path, class: 'btn btn-secondary d-inline-flex align-items-center' do %>
    <i class="fas fa-arrow-left me-2"></i> Volver a Películas
  <% end %>

</div>
