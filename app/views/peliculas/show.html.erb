<!-- Notificación en verde si existe -->
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<!-- Renderizar los detalles de la película -->
<%= render @pelicula %>

<!-- Botones para editar, eliminar y volver -->
<div class="text-center mt-4">
  <!-- Botón para editar la película -->
  <%= link_to edit_pelicula_path(@pelicula), class: 'btn btn-warning me-2 d-inline-flex align-items-center' do %>
    <i class="fas fa-edit me-2"></i> Editar Película
  <% end %>

  <!-- Botón para volver a la lista de películas -->
  <%= link_to peliculas_path, class: 'btn btn-secondary me-2 d-inline-flex align-items-center' do %>
    <i class="fas fa-arrow-left me-2"></i> Volver a Películas
  <% end %>

  <!-- Botón para eliminar la película -->
  <%= button_to @pelicula, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger d-inline-flex align-items-center' do %>
    <i class="fas fa-trash me-2"></i> Eliminar Película
  <% end %>
</div>
