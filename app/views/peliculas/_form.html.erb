<%= form_with(model: pelicula, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Título de la Película' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :genre, 'Género' %>
    <%= form.text_field :genre, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :year, 'Año de estreno' %>
    <%= form.number_field :year, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cliente_id, 'Cliente' %>
    <%= form.collection_select :cliente_id, Cliente.all, :id, :name, prompt: 'Selecciona un cliente', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar Película', class: 'btn btn-primary' %>
  </div>
<% end %>
