<!-- Tarjeta del cliente -->
<div id="<%= dom_id @cliente %>" class="card mb-3 shadow-sm">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0">
      <i class="fas fa-user"></i> <%= @cliente.name %>
    </h5>
  </div>

  <div class="card-body">
    <p class="card-text">
      <i class="fas fa-envelope"></i> <strong>Email:</strong> <%= @cliente.email %>
    </p>
  </div>

  <!-- Botones dentro de la tarjeta -->
  <div class="card-footer d-flex justify-content-between">
    <!-- Botón para editar cliente -->
    <%= link_to edit_cliente_path(@cliente), class: 'btn btn-warning d-inline-flex align-items-center' do %>
      <i class="fas fa-edit me-2"></i> Editar
    <% end %>

    <!-- Botón para eliminar cliente -->
    <%= button_to @cliente, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger d-inline-flex align-items-center' do %>
      <i class="fas fa-trash me-2"></i> Eliminar
    <% end %>
  </div>
</div>

<!-- Botón fuera de la tarjeta para volver a la lista de clientes -->
<div class="text-center mt-4">
  <%= link_to clientes_path, class: 'btn btn-secondary d-inline-flex align-items-center' do %>
    <i class="fas fa-arrow-left me-2"></i> Volver a Clientes
  <% end %>
</div>
